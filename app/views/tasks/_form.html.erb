<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Insert a task description here" %>
  
 

  
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
 
<% end %>
